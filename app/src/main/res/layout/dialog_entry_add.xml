<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_entry_add_tv_msg_entry_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_msg_entry_add_header"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dialog_entry_add_et_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:hint="@string/hnt_entry_amount"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:textCursorDrawable="@drawable/sp_cursor"
        android:textSize="24sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_entry_add_tv_msg_entry_add" />

    <EditText
        android:id="@+id/dialog_entry_add_et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:hint="@string/hnt_entry_comment"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:textCursorDrawable="@drawable/sp_cursor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_entry_add_et_amount" />

    <Button
        android:id="@+id/dialog_entry_add_btn_add"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorActiveButtonBackground"
        android:foreground="@drawable/ripple_primary"
        android:text="@string/btn_text_add"
        android:textColor="@color/colorActiveButtonText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_entry_add_et_comment" />

</androidx.constraintlayout.widget.ConstraintLayout>